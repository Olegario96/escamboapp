<div class="col-lg-12">
  <div class="card mt-4">
    <%= wicked_pdf_image_tag @ad.picture.url(:large) %>
    <div class="card-body">
      <h3 class="card-title"><%= @ad.title %></h3>
      <h4><%= humanized_money_with_symbol @ad.price %></h4>
      <p class="card-text"><%= @ad.description.html_safe %></p>
      <%= link_to "Imprimir PDF", '#', class: 'btn btn-danger' %>
    </div>
  </div>
</div>

